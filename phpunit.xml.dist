<?xml version="1.0" encoding="UTF-8"?>

<phpunit autoload="./vendor/autoload.php" colors="true">

    <testsuites>
        <testsuite name="test suite">
            <directory suffix="Test.php">./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
